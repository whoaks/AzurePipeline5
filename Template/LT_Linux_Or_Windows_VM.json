{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VNet_Name": {
            "type": "string",
            "defaultValue": "VNet-1"
        },
        "VNet_Address": {
            "type": "string",
            "defaultValue": "10.10.0.0/16"
        },
        "VNet_Tags": {
            "type": "object",
            "defaultValue": {
                "Env": "Testing"
            }
        },
        "Users_Choice": {
            "type": "string",
            "defaultValue": "windows",
            "allowedValues": [
                "linux",
                "windows"
            ]
        }
    },
    "resources": [
        {
            "name": "linkedDeployment1",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/NSG.json"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('VNet_Name'))]"
            ]
        },
        {
            "name": "linkedDeployment2",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/Subnet2.json"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'linkedDeployment1')]"
            ]
        },
        {
            "name": "linkedDeployment3",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/Public_IP.json"
                }
            }
        },
        {
            "name": "linkedDeployment4",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/NIC.json"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'linkedDeployment2')]",
                "[resourceId('Microsoft.Resources/deployments', 'linkedDeployment3')]"
            ]
        },
        {
            "name": "linkedDeployment5",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/Disks.json"
                }
            }
        },
        {
            "condition": "[equals(parameters('Users_Choice') , 'linux')]",
            "name": "linkedDeployment6",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/Linux_VM.json"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'linkedDeployment4')]"
            ]
        },
        {
            "condition": "[equals(parameters('Users_Choice') ,'windows')]",
            "name": "linkedDeployment7",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "artifacts/Windows_VM.json"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'linkedDeployment4')]"
            ]
        },
        {
            "name": "[parameters('VNet_Name')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('VNet_Tags')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VNet_Address')]"
                    ]
                }
            }
        }
    ]
}